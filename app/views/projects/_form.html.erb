<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= title %>
    </h3>
  </div>
  <%= form_tag({controller: "projects", action: action}, method: method, class: "form-horizontal") do %>
    <div class="box-body">
      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= t(:one, scope: [:models, :category]) %>
        </label>
        <div class="col-sm-10">
          <%= select_tag :category_id,
             options_for_select(
               @categories, @project.present? ? get_relationship_attribute_value_from(@project, :category, :id) : params[:category_id],
             ),
             include_blank: 'Selecionar...',
             class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= t(:name, scope: [:models, :project, :attributes]) %>
        </label>
        <div class="col-sm-10">
          <%= text_field_tag :name,
            @project.present? ? get_attribute_value_from(@project, :name) : params[:name],
            class: "form-control",
            placeholder: "Nome" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label">
          <%= t(:description, scope: [:models, :project, :attributes]) %>
        </label>
        <div class="col-sm-10">
          <%= text_area_tag :description,
            @project.present? ? get_attribute_value_from(@project, :description) : params[:description],
            class: "form-control",
            rows: 5,
            placeholder: "Descrição" %>
        </div>
      </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
      <%= link_to 'Voltar', projects_path, class: "btn btn-default" %>
        <button type="submit" class="btn btn-info pull-right">
          <%= action_btn %>
        </button>
    </div>
    <!-- /.box-footer -->
    <% end %>
</div>