<div class="login-box">
  <div class="login-logo">
    <span>Desafio
      <b>Fractal</b>
    </span>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Digite suas credenciais</p>
    <%= form_tag({controller: "auth", action: "user_session"}, method: 'post', class: "form-horizontal") do %>
      <div class="form-group has-feedback">
        <%= email_field_tag :email, nil, class: "form-control", placeholder: "Email", autofocus: true %>
          <span class="fa fa-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", autocomplete: "off" %>
          <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-6">
        </div>
        <!-- /.col -->
        <div class="col-xs-6">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Entrar</button>
        </div>
        <!-- /.col -->
      </div>
    <% end %>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->