<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= get_attribute_value_from(@task, :name) %>
    </h3>
  </div>
  <div class="box-body">
    <p>
      <strong><%= t(:one, scope: [:models, :project]) %>:</strong>
      <%= get_relationship_attribute_value_from(@task, :project, :name) %>
    </p>

    <p>
      <strong>
        <%= t(:description, scope: [:models, :task, :attributes]) %>:
      </strong>
      <%= get_attribute_value_from(@task, :description) %>
    </p>
  </div>
  <!-- /.box-body -->
  <div class="box-footer">
    <%= link_to 'Voltar', tasks_path, class: "btn btn-default" %>
  </div>
</div>